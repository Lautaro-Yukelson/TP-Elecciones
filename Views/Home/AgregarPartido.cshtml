<form action="GuardarPartido" method="post" class="formulario">
    <h2>Agregar Partido</h2>
    <input type="text" class="form-control" name="Nombre" placeholder="Nombre" required>
    <input type="text" class="form-control" name="Logo" placeholder="Logo (Link)" required>
    <input type="text" class="form-control" name="SitioWeb" placeholder="Sitio Web (Link)" required>
    <input type="date" class="form-control" name="FechaFundacion" required>
    <input type="number" class="form-control" name="CantidadDiputados" placeholder="Cantidad de Diputados" required>
    <input type="number" class="form-control" name="CantidadSenadores" placeholder="Cantidad de Senadores" required>
    <input type="color" class="form-control" name="ColorPrimario" placeholder="Color Primario" required>
    <input type="color" class="form-control" name="ColorSecundario" placeholder="Color Secundario" required>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>