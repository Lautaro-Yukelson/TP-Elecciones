<style>
    /*background-color: @ViewBag.infoPartido.ColorPrimario;*/
    .cardC.color .additional {
        background: @ViewBag.infoPartido.ColorPrimario ;
    }
</style>
<h1>@ViewBag.infoPartido.Nombre</h1>
<div class="cards-partidos__container">
    @{
        for(int i = 0; i < ViewBag.cantidad; i++){
            DateTime fechaNacimiento = ViewBag.candidatos[i].FechaNacimiento;
            int edad = DateTime.Now.Year - fechaNacimiento.Year;
            if (DateTime.Now < fechaNacimiento.AddYears(edad)) { edad--; }
            <div class="cardC color">
                <div class="additional">
                    <div class="user-cardC">
                        <div class="level center">
                            @edad años
                        </div>
                    <div class="points center">
                        @ViewBag.candidatos[i].Postulacion
                    </div>
                    <img width="110" height="110" viewBox="0 0 250 250" src="@ViewBag.candidatos[i].Foto" role="img" aria-labelledby="title desc" class="center img-perfil">
                </div>
                <div class="more-info">
                    <h1>@ViewBag.candidatos[i].Nombre @ViewBag.candidatos[i].Apellido</h1>
                    <div class="coords">
                    <span>Fecha Nacimiento</span>
                    <span>@fechaNacimiento.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="coords">
                    <span>Postulación</span>
                    <span>@ViewBag.candidatos[i].Postulacion</span>
                    </div>
                    <div class="stats">                        
                        <div>
                            <div class="title">Diputados</div>
                            <i class="fa fa-trophy"></i>
                            <div class="value">@ViewBag.infoPartido.CantidadDiputados</div>
                        </div>
                        <div>
                            <div class="title">Senadores</div>
                            <i class="fa fa-gamepad"></i>
                            <div class="value">@ViewBag.infoPartido.CantidadSenadores</div>
                        </div>
                        <div>
                            <div class="title">Votos</div>
                            <i class="fa fa-group"></i>
                            <div class="value">999</div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="general">
                    <h1>@ViewBag.candidatos[i].Nombre @ViewBag.candidatos[i].Apellido</h1>
                </div>
            </div>
        }
    }
</div> 