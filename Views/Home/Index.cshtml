@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido! Estos son los partidos actuales!</h1>
    <br>
</div>

<div class="cards-partidos__container">
    @{
        for(int i = 0; i<ViewBag.cantidad; i++){
            <a href='@Url.Action("VerDetallePartido", "Home", new { idPartido = @ViewBag.ListaPartidos[i].idPartido })' class="cardP">
                <img src="@ViewBag.ListaPartidos[i].Logo" alt="balloon with an emoji face" class="cardP__img">
                <span class="cardP__footer">
                    <span>@ViewBag.ListaPartidos[i].Nombre</span>
                    <span>2023</span>
                </span>
                <span class="cardP__action">
                    <svg viewBox="0 0 448 512" title="play">
                        <path d="M424.4 214.7L72.4 6.6C43.8-10.3 0 6.1 0 47.9V464c0 37.5 40.7 60.1 72.4 41.3l352-208c31.4-18.5 31.5-64.1 0-82.6z" />
                    </svg>
                </span>
            </a>  
        }
    }
</div>  
